{
  "name": "moozhak",
  "version": "2.0.0",
  "description": "CLI tool to search Discogs and find where to buy tracks from playlists",
  "type": "module",
  "bin": {
    "moozhak": "./cli.js"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node cli.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --verbose",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch --verbose",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --verbose",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run lint && npm run test"
  },
  "keywords": [
    "discogs",
    "music",
    "cli",
    "playlist"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "ansis": "^4.2.0",
    "commander": "^13.0.0",
    "disconnect": "^1.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "jest": "^29.7.0"
  }
}
